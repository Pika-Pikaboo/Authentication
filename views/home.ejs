<style>
  .courses-container {
    width: 100%;
  }

  .sub-courses-container {
    padding: 0 20%;
    display: flex;
    align-items: center;
    -moz-column-gap: 1.5rem;
    column-gap: 1.5rem;
  }

  .courses-left {
    flex-basis: 50%;
    overflow: hidden;
  }

  .courses-right {
    flex-basis: 50%;
  }

  .courses-left > img {
    max-width: 100%;
    -o-object-fit: cover;
    object-fit: cover;
    -o-object-position: center;
    object-position: center;
  }
</style>

<div class="courses-container">
  <div class="sub-courses-container">
    <div class="courses-left">
      <img src="../images/food-1.jpg" alt="food one" />
    </div>
    <div class="courses-right">
      <h1>Our Courses</h1>
      <% offeredCourses.forEach(course => { %>
      <h5><%= course.title %></h5>
      <span>$ <%= course.cost %> </span>
      <% }); %>
    </div>
  </div>
</div>
